
    
    <link rel="stylesheet" href="/css/home.css">
    <h1 id = "title" > Posts </h1>

    <% if(locals.user) {%>
      <form id = "send_post" action = "/post/create" method="post">
        <textarea name="data" rows = "3" cols = "90" placeholder = "post your message here..."></textarea>
        <br>
        <button type = "submit"> Post </button>    
      </form>
    <%}%>

    
    <ul id = "posts-container">
        <% for(post of locals.posts) {%>
           <li class = "post"> 
              <% if(locals.user && post.user.id == locals.user.id) {%> 
                  <a href="/post/destroy/<%= post._id %>">X</a>
              <%}%>
              <p class = "message"> <%= post.data %> </p> 
              <span class = "message_author"> <%= post.user.email %> </span> 
              
              <%if(locals.user){%>
                <form action = <%= "/comment/create/?post_id="+ post._id %> class = "send_comment" method="post">
                  <textarea name="data" cols="30" rows="3" placeholder = "Type your comments here...."></textarea>
                  <br>
                  <button type="submit">Comment</button>
                </form>
              <%}%>
              <ul class = "comments-container">
                    <% for(comment of post.comments){%>
                      <li class = "comment">
                         <p> <%= comment.data %> </p>
                         <span class = "comment-author"> <%= comment.user.email %> </span>
                      </li>
                    <%}%>
              </ul>
           </li>
        <%}%>    
    </ul>
